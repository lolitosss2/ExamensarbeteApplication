<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:text="@string/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEntryField"
        android:textSize="48sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewCurrentDateField"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textViewEntryField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textViewSelfHarm"
        android:text="Self Harm"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_below="@+id/textViewCurrentDateField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Intensity of impulse to hurt yourself:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textViewQuestion1"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_below="@+id/textViewSelfHarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBarQuestion1Field"
        android:layout_alignRight="@+id/seekBarQuestion1Field"
        android:layout_alignEnd="@+id/seekBarQuestion1Field"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewQuestion1Per"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:id="@+id/buttonNext0"
        android:background="@drawable/buttonnext"
        android:rotation="270" />

    <SeekBar

        android:layout_height="wrap_content"
        android:id="@+id/seekBarQuestion1Field"
        android:max="100"
        android:thumb="@drawable/thumb"
        android:minHeight="6dip"
        android:maxHeight="6dip"
        android:progressDrawable="@drawable/custom_progress"
        android:layout_width="350dp"
        android:paddingStart="25dp"
        android:layout_below="@+id/textViewQuestion1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Did you hurt yourself today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textViewQuestion2"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_below="@+id/textViewQuestion1Per"
        android:layout_alignLeft="@+id/textViewQuestion1"
        android:layout_alignStart="@+id/textViewQuestion1" />

    <SeekBar
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarQuestion3Field"
        android:max="100"
        android:thumb="@drawable/thumb"
        android:minHeight="6dip"
        android:maxHeight="6dip"
        android:progressDrawable="@drawable/custom_progress"
        android:paddingStart="25dp"
        android:layout_below="@+id/textViewQuestion3"
        android:layout_alignLeft="@+id/seekBarQuestion1Field"
        android:layout_alignStart="@+id/seekBarQuestion1Field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textViewQuestion3"
        android:text="Intensity of suicidal thoughts:"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/textViewQuestion2"
        android:layout_alignStart="@+id/textViewQuestion2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:button="@drawable/checkbox_selector"
        android:layout_alignBaseline="@+id/textViewQuestion2"
        android:layout_alignBottom="@+id/textViewQuestion2"
        android:layout_toRightOf="@+id/textViewEntryField"
        android:layout_toEndOf="@+id/textViewEntryField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQuestion3Per"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/text"
        android:layout_below="@+id/seekBarQuestion3Field"
        android:layout_alignRight="@+id/textViewQuestion1Per"
        android:layout_alignEnd="@+id/textViewQuestion1Per" />

</RelativeLayout>